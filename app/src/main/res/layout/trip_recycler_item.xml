<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_item"
    android:layout_marginBottom="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tripNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#673AB7"
            android:textStyle="bold"
            android:text="Sajek"/>

        <TextView
            android:id="@+id/tripDescTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#7259AC"
            android:layout_marginTop="5dp"
            android:text="enjoying the touch very much"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:background="@drawable/rounded_item_p2"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tripDetailsTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="details"/>

        <TextView
            android:id="@+id/tripMemoriesTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="Edit"/>

        <TextView
            android:id="@+id/tripDeleteTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="delete"/>
    </LinearLayout>
</LinearLayout>